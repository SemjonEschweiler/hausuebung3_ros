<?xml version="1.0" ?>
<launch>
    	<!--                                     -->
    	<!-- Some default settings for our world -->
    	<!--                                     -->
	<arg name="pos_x" default="9"/> <!-- This is the robot's x start position -->
	<arg name="pos_y" default="1"/> <!-- This is the robot's y start position -->
	<arg name="orient_z" default="0"/> <!-- This is the robot's start orientation -->
	<!--                                            -->
	<!-- Run the simulation and place the bot in it -->
	<!--                                            -->
	<group>
	    <!-- Some remappings to the actual MIR controller in Gazebo -->
	    <!-- just remaps... "this is it" to "what you want it to be" -->
    	    <remap from="joint_states"                   to="mir/joint_states" />
    	    <remap from="mobile_base_controller/cmd_vel" to="cmd_vel" />
    	    <remap from="mobile_base_controller/odom"    to="odom" />
	    <!-- This one starts the Gazebo simulation and sets some values -->
	    <include file="$(find gazebo_ros)/launch/empty_world.launch"> <!-- Run an empty world -->
		<!-- The next line "finds" the correct package in the catkin folders and loads the correct world -->
		<!-- Note how nice the "find" command is -->
    	        <arg name="world_name" value="$(find summerschool2022)/world/digitaleFabrik2.world"/>
		<arg name="paused" value="false" /> <!-- This one could be set to start the simulation paused -->
		<!-- Unfortunately, ROS needs the correct time for multiple stuff. Hence, we use the simulated time -->
		<arg name="use_sim_time" value="true" /> 
		<arg name="gui" value="true" /> <!-- This one starts the the graphical interface -->
		<!-- NOTE: Deactivate the GUI if you need more CPU power -->
    	    </include>
    	</group>
	<!--                              -->
	<!-- Place the robot in the world -->
	<!--                              -->
	<include file="$(find mir_gazebo)/launch/mir_gazebo_common.launch">
		<!-- Note the variables from above -->
        	<arg name="robot_x"   value="$(arg pos_x)" />
        	<arg name="robot_y"   value="$(arg pos_y)" />
        	<arg name="robot_yaw" value="$(arg orient_z)" />
	</include> 
	<!--                      -->
	<!-- Place your code here -->
	<!--                      -->
</launch>
